<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>買い物リスト</title>
    <link rel="stylesheet" href="/css/common.css" />
    <link rel="stylesheet" href="/css/list.css" />
  </head>
  <body>
    <div class="container">
      <!-- タイトル部分 -->
      <div class="title-wrapper">
        <h1>買い物リスト</h1>
        <a href="/create" class="new-btn btn">新規登録</a>
      </div>

      <!-- テーブル -->
      <div class="content-wrapper">
        <table>
          <tbody>
            <tr>
              <th width="10%">No.</th>
              <th width="60%">買うもの</th>
              <th width="15%"></th>
              <th width="15%"></th>
            </tr>
            <% items.forEach((item) => { %>
            <tr>
              <td class="number"></td>
              <td class="name"><%= item.name %></td>
              <td style="text-align: center">
                <a href="/edit/<%= item.id %>" class="btn edit-btn">編集</a>
              </td>
              <td style="text-align: center">
                <form action="/delete/<%= item.id %>" method="post" style="margin: 0">
                  <input type="submit" class="btn" value="削除" style="letter-spacing: 3px" />
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
